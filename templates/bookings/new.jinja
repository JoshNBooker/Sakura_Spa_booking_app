{% extends 'base.jinja' %}{% block content %}
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}"/>
</head>
<div class="container">
    <main class="title"><h1>Please complete the booking form below</h1></main>
    <body>
        <form action="/bookings" method="post" class="booking_form_container">
            <label for="date">Enter the date of treatment:</label>
            <input type="datetime-local" name="date_time" id="date_time" class="booking_form_input"><br>
            <label for="treatment">Which treatment would you like to book?</label>
            <select name="treatment" id="treatment" class="booking_form_input">
                {% for treatment in treatments %}
                    <option 
                    value="{{ treatment.id }}">
                    {{ treatment.name }}
                    </option>
                {% endfor %}
            </select> <br>
            <label for="customer">Which customer is having the treatment?</label>
            <select name="customer" id="customer" class="booking_form_input">
                {% for customer in customers %}
                    <option 
                    value="{{ customer.id }}">
                    {{ customer.first_name }} {{ customer.last_name }}
                    </option>
                {% endfor %}
            </select> <br>
            <input type="submit" name="submit" id="submit" class="header__button secondary">
        </form>
    </body>
</div>
</html>
{% endblock content %}
