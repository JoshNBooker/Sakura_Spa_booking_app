{% extends 'base.jinja' %}{% block content %}
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}"/>
</head>
<body>
    <form action="/bookings" method="post">
        <label for="date">Enter the date of treatment:</label>
        <input type="datetime-local" name="date_time" id="date_time">
        <label for="treatment">Which treatment would you like to book?</label>
        <select name="treatment" id="treatment">
            {% for treatment in treatments %}
                <option 
                value="{{ treatment.id }}">
                {{ treatment.name }}
                </option>
            {% endfor %}
        </select>
        <label for="customer">Which customer is having the treatment?</label>
        <select name="customer" id="customer">
            {% for customer in customers %}
                <option 
                value="{{ customer.id }}">
                {{ customer.first_name }} {{ customer.last_name }}
                </option>
            {% endfor %}
        </select>
        <input type="submit" name="submit" id="submit">
    </form>
</body>
</html>
{% endblock content %}
